<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.pio.floorislavafront.FloorIsLavaController">
    <GridPane alignment="CENTER" styleClass="initial-screen-container" stylesheets="@stylesheet.css" VBox.vgrow="ALWAYS">
        <Pane prefHeight="535.0" prefWidth="668.0" VBox.vgrow="ALWAYS">
            <styleClass>
                <String fx:value="buttons-container"/>
            </styleClass>
            <Button layoutX="225.0" layoutY="434.0" mnemonicParsing="false" onAction="#onQuitButtonClick"
                    prefHeight="65.0" prefWidth="218.0" text="QUIT">
                <styleClass>
                    <String fx:value="quit-game-button"/>
                    <String fx:value="button"/>
                </styleClass>
            </Button>
            <Button layoutX="225.0" layoutY="354.0"
                    mnemonicParsing="false" prefHeight="65.0" prefWidth="218.0" text="INSTRUCTIONS">
                <styleClass>
                    <String fx:value="show-instructions-button"/>
                    <String fx:value="button"/>
                </styleClass>
            </Button>
            <Button layoutX="225.0" layoutY="224.0"
                    mnemonicParsing="false" prefHeight="65.0" prefWidth="218.0" text="JOIN GAME"
                    textAlignment="JUSTIFY">
                <styleClass>
                    <String fx:value="join-game-button"/>
                    <String fx:value="button"/>
                </styleClass>
            </Button>
            <TextField layoutX="294.0" layoutY="147.0"/>
            <TextField layoutX="294.0" layoutY="184.0"/>
            <Label layoutX="220.0" layoutY="150.0" styleClass="initial-screen-label" text="Username:"/>
            <Label layoutX="225.0" layoutY="186.0" prefHeight="21.0" prefWidth="60.0"
                   styleClass="initial-screen-label" text="Server IP:"/>
        </Pane>
    </GridPane>
</VBox>
